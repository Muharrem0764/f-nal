@{
    ViewData["Title"] = "Delete";
}

@model ProductModel
<h1>Ürün Sil</h1>
<h3>"<b>@Model.Name</b>" Adlı Ürün Silinecektir Onaylıyor musunuz?</h3>
<form asp-controller="Product" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
    <input type="submit" value="Sil" class="btn btn-outline-danger" />
</form>